<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <title>Đăng nhập hệ thống</title>
  <link rel="stylesheet" href="/css/login.css" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <div class="login-container">
    <img src="/images/logo.png" alt="Logo hệ thống" id="logo-login">
    <h5>CỔNG THÔNG TIN ĐIỆN TỬ</h5>
    <h6>Đăng nhập</h6>

    <!-- Form login -->
    <form id="login-form" method="POST" action="/">
      

     
      <input type="text" name="loginId" id="loginId" placeholder="Tài khoản" required>
      <input type="password" name="password" id="password" placeholder="Mật khẩu" required>
      <!-- Chọn loại người dùng -->
      <select name="userType" id="userType" required>
        <option value="">-- Chọn loại người dùng --</option>
        <option value="admin">Quản lý</option>
        <option value="teacher">Giảng viên</option>
        <option value="student">Sinh viên</option>
      </select>
      <button type="submit" id="login-btn">Đăng nhập</button>
    </form>

    <!-- Hiển thị lỗi -->
    <% if (typeof error !== 'undefined' && error) { %>
      <p id="error-msg" style="color:red"><%= error %></p>
    <% } %>
  </div>

  <script src="/js/login.js"></script>
</body>
</html>
